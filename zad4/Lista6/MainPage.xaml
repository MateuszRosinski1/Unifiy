<Window x:Class="Lista6.MainPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lista6"
        mc:Ignorable="d"
        Title="MainPage" Height="650" Width="1000" 
        Background="#36393F"
        ResizeMode="CanResizeWithGrip"
        Icon="/img/Ikonka2.png"
        WindowStyle="None">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Window.DataContext>
        <local:AppOperator/>
    </Window.DataContext>
    <Grid x:Name="AppGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border MouseDown="Border_MouseDown"
                Grid.ColumnSpan="2"
                Background="#252525">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Style="{StaticResource RoundButton}"
                        Width="30"
                        Foreground="Gray"
                        Background="YellowGreen"
                        FontSize="20" Content="🗕"
                        Click="MinimalizeButton_Click"/>
                <Button Style="{StaticResource RoundButton}" 
                        Width="30"
                        Foreground="Gray"
                        Background="Yellow"
                        FontSize="20"
                        Content="🗗"
                        Margin="3,0,0,0"
                        Click="MaximalizeButton_Click"
                        Height="30" 
                        VerticalAlignment="Bottom"/>
                <Button Style="{StaticResource RoundButton}"
                        Width="30"
                        Foreground="Gray" 
                        Background="OrangeRed"
                        Content="✖"
                        Margin="3,0,0,0"
                        Click="ExitButton_Click"
                        Height="30" 
                        VerticalAlignment="Top"/>
            </StackPanel>
        </Border>
        <Grid Grid.Row="1"
              Background="#292c30">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>
            <DockPanel>
                <Image Margin="30,0,0,0"
                       Height="50"
                       Width="50">
                    <Image.Source>
                        <BitmapImage DecodePixelWidth="200"  
                                 UriSource="/img/Ikonka2.png"/>
                    </Image.Source>
                </Image>
                <Label DockPanel.Dock="Right" 
                       Content="Unifiy ®"
                       Foreground="#92969c"
                       FontWeight="DemiBold"
                       FontSize="25"
                       VerticalAlignment="Center"/>
            </DockPanel>
            <StackPanel Grid.Row="1">
                <Button Content="🔍 Szukaj" 
                        Style="{StaticResource OptionsLabels}"/>
                <Button Content="🏠 Home" 
                        Style="{StaticResource OptionsLabels}"/>
                <Button Content="      ♫  Playlisty" 
                        Style="{StaticResource OptionsLabels}"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="2"
            Background="#292c30">
            <Button Height="35" 
                    Width="35" 
                    Style="{StaticResource RoundButton}" 
                    Grid.Row="2">
                <Button.Background>
                    <ImageBrush ImageSource="/img/user.png"/>
                </Button.Background>
            </Button>
        </Grid>
        <Grid Background="#16171a"
              Grid.Row="2" 
              Grid.Column="2" 
              x:Name="MusicBar">
            <StackPanel Orientation="Horizontal">
                <Button  FontSize="30" 
                    Foreground="White" 
                    Content="▶" 
                    BorderThickness="0" 
                    Background="Transparent"
                    Height="50" 
                    Width="50"
                    Style="{StaticResource OptionsLabels}">
                    
                </Button>
                <ProgressBar  Foreground="White" 
                              Value="50"
                              BorderThickness="0" 
                              Background="Gray"
                              Height="5"
                              Width="{Binding ElementName=MusicBar, Path=ActualWidth, Mode=OneWay}"/>
            </StackPanel>
           
        </Grid>
    </Grid>
</Window>
